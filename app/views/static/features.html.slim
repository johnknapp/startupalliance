    .row
      .large-3.columns
        ul.tabs.show-for-small-only.shadow#features-tabs data-tabs=true data-deep-link="true" data-update-history="true"
          li.tabs-title.is-active
            a.bold href='#memberships' aria-selected='true'
              ' Memberships
          li.tabs-title
            a.bold href='#alliances'
              ' Private Alliances
          li.tabs-title
