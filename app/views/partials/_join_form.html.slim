- @acqsrc = params[:acqsrc] ? params[:acqsrc] : params[:controller] + '/' +params[:action]

= simple_form_for(:user, url: registration_path(:user)) do |f|
  = f.error_notification
  = f.hidden_field :acqsrc, value: @acqsrc
  .row.collapse
    .small-8.columns
      = f.input :email, placeholder: 'Enter your email', label: false
    .small-4.columns
      = f.button :submit, 'Sign me up!', class: 'postfix expanded bold secondary'
  .row
    .small-12.columns
      .float-right
        p.snug-top.faint
          em
            ' Already a member?
            = link_to 'Sign-in', new_user_session_path
      p.snug-top.faint
        em 100% privacy. No spam ever.
