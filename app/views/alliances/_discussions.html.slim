- if current_user and @alliance.members.include?(current_user)
  .small-12.columns
    .callout data-closable=true
      button data-close=true aria-label='Close' type='button' class='close-button'
        span aria-hidden=true
          ' &times;
      p.faint.pad-right
        ' Threaded discussions are a source of knowledge and answers. (Any member can participate.)
.row
  .medium-8.medium-offset-2.columns
    .float-right
      /a data-open='disco-info'
        i.fa.fa-info-circle
      /= render 'partials/quick_reference_disco'

      - if current_user and (@alliance.creator == current_user) or (current_user.role == 'admin')
        = render 'discussions/add_modal', discussable: @alliance
    h5.bold.primary-text
      | &nbsp;
      /' Discussions:
    - if current_user and @alliance.members.include?(current_user)
      - if @alliance.discussions.present?
        - @alliance.discussions.order(:name).each do |disco|
          - if current_user and (@alliance.creator == current_user) or (current_user.role == 'admin')
            .float-right
              ul.dropdown.menu data-dropdown-menu=true
                li
                  = link_to '#' do
                    i.fa.fa-ellipsis-v
                  ul.menu data-dropdown-menu=true data-alignment='left'
                    li= render 'discussions/edit_modal', discussable: @alliance, discussion: disco
                    li= link_to disco, data: { confirm: 'Really destroy this Discussion and all itâ€™s Topics and Posts?' }, method: :delete do
                      i.fa.fa-trash-o
                      | &nbsp;
                      ' Delete
          h5.bold.little-space-top
            ' #{link_to disco.name, discussion_path(disco)}
          p.little-snug-top.faint
            = discussion_summary(disco)
      - else
        .callout
          p.text-center No Discussions yet!
    - else
      p.text-center.space-top
        em
          ' Private Alliance Member discussions only visible to the Members.
