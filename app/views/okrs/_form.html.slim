= simple_form_for(@okr) do |f|
  = f.error_notification

  .form-inputs
    = f.hidden_field :company_id, value: @company.id
    .row
      .medium-4.columns
        = f.input :okr_start, label: 'OKR starts on', placeholder: 'In the future (mm/dd/yyyy)', as: :string, input_html: { value: f.object.okr_start.try(:strftime,'%m/%d/%Y') }
      .medium-4.columns
        = f.input :okr_duration, label: 'OKR duration is', placeholder: 'Number between 3 and 6'
      .medium-4.columns
        = f.input :okr_units, label: 'OKR period is', collection: Okr.okr_units.keys, include_blank: 'Choose a period'

    = f.input :objective, placeholder: 'An objective for this period'
    = f.input :key_result_1, placeholder: 'A numerically quantifiable result'
    = f.input :key_result_2, placeholder: 'A numerically quantifiable result'
    = f.input :key_result_3, placeholder: 'A numerically quantifiable result'

    - if !@okr.new_record?
      .row
        .medium-6.columns
          = f.input :mid_score, label: 'Score at middle of period', placeholder: 'Your score on a scale 1 to 10'
        .medium-6.columns
          = f.input :final_score, label: 'Score at end of period', placeholder: 'Your score on a scale 1 to 10'
      .row
        .medium-12.columns
          = f.input :postmortem, label: 'OKR Postmortem', placeholder: 'Conclusions regarding this OKR'

  .form-actions
    .row
      .medium-12.columns
        .button-group
          = f.button :submit, class: 'button'
          = link_to 'Exit', :back, class: 'button accent'
